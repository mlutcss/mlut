		"sass",
		"scss",
		"css",
		"atomic css",
		"functional css",
		"utility-first",
		"framework",
		"toolkit"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/mr150/mlut.git"
	},
	"bugs": {
		"url": "https://github.com/mr150/mlut/issues"
	},
